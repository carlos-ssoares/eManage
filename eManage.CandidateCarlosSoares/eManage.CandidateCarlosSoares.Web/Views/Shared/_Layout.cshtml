<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Prototype - Tecnical test</title>
    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    
    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">

    <!-- Notification Style -->
    <link href="~/css/notification.css" rel="stylesheet">

    <script src="~/Scripts/Angular/angular.min.js"></script>
    <script src="~/Scripts/Angular/app.js"></script>
    <script src="~/Scripts/Angular/appController.js"></script>

</head>
@*Here is refering the Angular Application which was created in /Scripts/Angular/app.js*@
<body class="nav-md" ng-app="eManageApp">
    <div class="container body">

        @*Here is refering the Angular Controller which was created in /Scripts/Angular/appController.js*@
        <div class="main_container" ng-controller="eManageController">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="@Url.Action("Index", "Home")" class="site_title">
                            <img src="~/Images/logo.png" style="height: 25px;" />
                            <span>eManage</span>
                        </a>
                    </div>
                    <div class="clearfix"></div>

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">

                            <ul class="nav side-menu">                                
                                <li>
                                    <a><i class="fa fa-edit"></i> @(eManage.CandidateCarlosSoares.Shared.Resources.Labels.Register.ToString()) <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="@Url.Action("Index", "Home")">@(eManage.CandidateCarlosSoares.Shared.Resources.Labels.Users.ToString())</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>

                    </div>
                    <!-- sidebar menu -->
                </div>
            </div>
            
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                
                                <a href="#" class="user-profile">
                                    <span>@(eManage.CandidateCarlosSoares.Shared.Resources.Labels.Logout.ToString())</span>
                                </a>
                                
                            </li>

                            <li class="">
                                
                                <a href="Home/ChangeCulture?lang=en-US" class="">
                                    <img src="~/Images/US.png" />
                                </a>
                                
                            </li>

                            <li class="">
                                
                                <a href="Home/ChangeCulture?lang=pt-BR" class="">
                                    <img src="~/Images/PT.png" />
                                </a>
                                
                            </li>
                                                        
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- top navigation -->

            <!-- page content -->
            <div class="right_col" role="main">
              <div class="">
                <div class="page-title">
                  <div class="title_left">
                    <h3></h3>
                  </div>

                </div>
                <div class="clearfix"></div>
              
                @RenderBody()            
              
              </div>
            </div>
            
            <!-- page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-left">
                    <a target="_blank" href="https://www.linkedin.com/in/carlosvssoares/"><span class="fa fa-linkedin"></span>  Carlos</a>
                </div>

                <div class="pull-right">
                    <label>16/03/2018</label>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- footer content -->
        </div>
    </div>
    
    <!-- jQuery -->
    <script src="~/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    
    <!-- toastr / Notification -->
    <script src="~/Scripts/toastr.min.js"></script>
    

    <!-- Custom Theme Scripts -->
    <script src="~/build/js/custom.js"></script>
    
</body>
</html>